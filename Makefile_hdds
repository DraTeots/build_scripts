PWD = $(shell pwd)
HDDS_HOME = $(PWD)/hdds

all: prod_link

$(HDDS_HOME)/.checkout_done:
	svn co https://halldsvn.jlab.org/repos/trunk/hdds
	date > $@

make_hdds: $(HDDS_HOME)/.checkout_done
	$(MAKE) -C $(HDDS_HOME)

prod_link: make_hdds
	test -L prod || ln -s hdds prod # will not overwrite existing link
