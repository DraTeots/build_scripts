# Makefile_mcwrapper

PWD = $(shell pwd)

ifdef MCWRAPPER_VERSION
 SOURCE_CODE_TARGET = $(MCWRAPPER_HOME)/.untar_done
 ifdef MCWRAPPER_DIRTAG
  MCWRAPPER_DIR = gluex_MCwrapper-$(MCWRAPPER_VERSION)^$(MCWRAPPER_DIRTAG)
 else
  MCWRAPPER_DIR = gluex_MCwrapper-$(MCWRAPPER_VERSION)
 endif
 TARFILE = $(MCWRAPPER_VERSION).tar.gz
else
 SOURCE_CODE_TARGET = $(MCWRAPPER_HOME)/.clone_done
 ifndef MCWRAPPER_URL
  MCWRAPPER_URL=https://github.com/jeffersonlab/gluex_MCwrapper
 endif
 ifdef MCWRAPPER_DIRTAG
  MCWRAPPER_DIR = $(notdir $(MCWRAPPER_URL))^$(MCWRAPPER_DIRTAG)
 else
  MCWRAPPER_DIR = $(notdir $(MCWRAPPER_URL))
 endif
 ifndef MCWRAPPER_BRANCH
  MCWRAPPER_BRANCH = master
 endif
endif

MCWRAPPER_HOME = $(PWD)/$(MCWRAPPER_DIR)

all: $(MCWRAPPER_HOME)/mcwrapper_prereqs_version.xml

$(TARFILE):
	wget --no-check-certificate -O $@ https://github.com/jeffersonlab/gluex_MCwrapper/archive/$(TARFILE)

$(MCWRAPPER_HOME)/.clone_done:
	git clone -b $(MCWRAPPER_BRANCH) $(MCWRAPPER_URL) $(MCWRAPPER_DIR)
ifdef MCWRAPPER_HASH
	cd $(MCWRAPPER_DIR) ; git checkout $(MCWRAPPER_HASH)
endif
	date > $@

$(MCWRAPPER_HOME)/.untar_done: $(TARFILE)
	rm -rf untar_temp_dir
	mkdir untar_temp_dir
	cd untar_temp_dir ; tar zxf ../$(TARFILE)
	mv -v untar_temp_dir/* $(MCWRAPPER_DIR)
	rmdir -v untar_temp_dir
	date > $@

$(MCWRAPPER_HOME)/mcwrapper_prereqs_version.xml: $(SOURCE_CODE_TARGET)
	cd $(MCWRAPPER_HOME) ; $(BUILD_SCRIPTS)/version_prereqs.pl mcwrapper
